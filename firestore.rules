rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to read from the users collection.
    // Consider making this more restrictive if you store sensitive user data.
    match /users/{userId} {
      allow read: if request.auth != null;
    }

    // Allow any authenticated user to read and write to the 'lotes' collection.
    // You might want to restrict writes to certain roles (e.g., 'admin').
    match /lotes/{loteId} {
      allow read, write: if request.auth != null;
    }
  }
}
